---
import { Picture } from "astro:assets";
import facebook from "../assets/socials/facebook.png";
import instagram from "../assets/socials/instagram.png";
import linkedin from "../assets/socials/linkedin.png";
import twitter from "../assets/socials/twitter.png";

const footerLinks = {
	MARKETCIRCLE: [
		{ label: "About Us", href: "#" },
		{ label: "Press", href: "#" },
		{ label: "Careers", href: "#" },
		{ label: "Blog", href: "#" },
		{ label: "Contact Us", href: "#" },
	],
	PARTNERS: [
		{ label: "Find a Partner", href: "#" },
		{ label: "Affiliate Program", href: "#" },
	],
	DAYLITE: [
		{ label: "Overview", href: "#" },
		{ label: "Features", href: "#" },
		{ label: "CRM", href: "#" },
		{ label: "Sales", href: "#" },
		{ label: "Projects", href: "#" },
		{ label: "Business", href: "#" },
		{ label: "Pricing", href: "#" },
		{ label: "Integrations", href: "#" },
		{ label: "Customers", href: "#" },
		{ label: "Learn Daylite", href: "#" },
	],
	"HELPFUL LINKS": [
		{ label: "Schedule a Demo", href: "#" },
		{ label: "Daylite Coaches", href: "#" },
		{ label: "Remote Resources", href: "#" },
		{ label: "Help Center", href: "#" },
		{ label: "Webinars", href: "#" },
		{ label: "Downloads", href: "#" },
		{ label: "Daylite Status", href: "#" },
		{ label: "Billings Pro Status", href: "#" },
	],
	POLICIES: [
		{ label: "Terms of Service", href: "#" },
		{ label: "Privacy Policy", href: "#" },
		{ label: "Accessibility", href: "#" },
		{ label: "Cloud Security", href: "#" },
		{ label: "Refund Policy", href: "#" },
	],
};

const socialLinks = [
	{ title: "twitter", icon: twitter, href: "https://twitter.com/dayliteapp" },
	{ title: "facebook", icon: facebook, href: "https://www.facebook.com/Dayliteapp/" },
	{ title: "instagram", icon: instagram, href: "https://www.instagram.com/dayliteapp/" },
	{ title: "linkedin", icon: linkedin, href: "https://www.linkedin.com/company/marketcircle/" },
];

const languages = ["Français", "Deutsch", "Español", "Nederlands"];
---

<footer class="bg-background-light px-6 py-10 lg:px-0">
	<div class="mx-auto grid max-w-6xl grid-cols-1 gap-6 px-6 md:grid-cols-4">
		<div>
			<h3 class="mt-4 mb-2 font-bold sm:mt-0">MARKETCIRCLE</h3>
			<ul class="space-y-2">
				{
					footerLinks["MARKETCIRCLE"].map((item) => (
						<li>
							<a href={item.href} class="text-text-secondary hover:underline">
								{item.label}
							</a>
						</li>
					))
				}
			</ul>
			<h3 class="mt-10 mb-2 font-bold sm:mt-0">PARTNERS</h3>
			<ul class="space-y-2">
				{
					footerLinks["PARTNERS"].map((item) => (
						<li>
							<a href={item.href} class="text-text-secondary hover:underline">
								{item.label}
							</a>
						</li>
					))
				}
			</ul>
		</div>
		{
			Object.entries(footerLinks).map(([title, links]) =>
				title !== "MARKETCIRCLE" && title !== "PARTNERS" ? (
					<div>
						<h3 class="mt-4 mb-2 font-bold sm:mt-0">{title}</h3>
						<ul class="space-y-2">
							{links.map((item) => (
								<li>
									<a href={item.href} class="text-text-secondary hover:underline">
										{item.label}
									</a>
								</li>
							))}
						</ul>
					</div>
				) : null,
			)
		}
	</div>
	<div class="px-6 sm:px-0">
		<div class="mt-6 flex justify-start space-x-4 sm:justify-center">
			{
				socialLinks.map((link) => (
					<a href={link.href}>
						<div class="h-8 w-auto bg-white transition-transform duration-300 ease-in-out hover:scale-105">
							<Picture
								sizes="100px"
								widths={[200, 400, 800]}
								class="h-full w-full object-contain"
								formats={["avif", "webp"]}
								fallbackFormat="jpeg"
								src={link.icon}
								alt={link.title}
							/>
						</div>
					</a>
				))
			}
		</div>
		<div
			class="text-text-secondary mt-4 flex flex-col justify-start space-y-4 space-x-4 text-sm sm:flex-row sm:justify-center sm:space-y-0"
		>
			{languages.map((lang) => <span class="cursor-pointer hover:underline">{lang}</span>)}
		</div>

		<p class="mt-8 text-center text-sm text-gray-500 sm:mt-4">
			© {new Date().getFullYear()} Marketcircle Inc. All rights reserved.
		</p>
	</div>
</footer>
