---
import { Picture } from "astro:assets";
import header from "../../assets/why/headerx.jpg";
interface Props {
	title: string;
	titleColor?: string;
}
const { title, titleColor = "text-text-primary" } = Astro.props;
---

<section class={`mt-20 sm:mt-32`}>
	<div class={`flex flex-col justify-center text-center items-center`}>
		<div
			class={`px-4 sm:px-6 md:px-8 2xl:px-0 h-full flex flex-col justify-between gap-4 sm:gap-8`}
		>
			<div class="mx-auto max-w-4xl">
				<h1 class={`mb-4 sm:mb-8 ${titleColor}`}>{title}</h1>
				<slot />
			</div>
		</div>
	</div>
	<div class="h-52 w-screen pt-8 sm:h-full sm:pt-16">
		<Picture
			src={header}
			alt={title}
			sizes="100vw"
			formats={["avif", "webp"]}
			fallbackFormat="png"
			widths={[400, 800, 1600, 2400]}
			class="h-full w-full object-cover object-[position:0_10%] sm:rounded-lg"
		/>
	</div>
</section>
