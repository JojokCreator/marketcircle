---
import { Icon } from "astro-icon/components";
import type { Props as ButtonProps } from "./Button.astro";
import Button from "./Button.astro";

interface Props {
	title: string;
	button?: ButtonProps | false;
	scroll: string[];
}
const { title, scroll } = Astro.props;
---

<section class={`mx-auto max-w-7xl mt-8 sm:mt-32`}>
	<div class={`flex flex-col justify-center text-center items-center`}>
		<div class={`px-4 xl:px-0 h-full flex flex-col justify-between gap-4 sm:gap-8`}>
			<h2 class="mb-4 text-3xl/12 font-bold sm:mb-8 sm:text-5xl/18">{title}</h2>
			<div class="mx-auto max-w-4xl">
				<slot />
			</div>
			<div class="mx-auto flex w-full max-w-6xl flex-row justify-between py-8 sm:py-12">
				{
					scroll.map((scroll, index) => (
						<a
							href={"#" + scroll}
							class={`group flex h-52 flex-col items-center justify-center gap-2 text-xl hover:cursor-pointer sm:w-96 sm:text-2xl/10 ${index === 0 ? "text-accent-blue" : index === 1 ? "text-accent-teal" : index === 2 ? "text-accent-red" : "text-accent-purple"}`}
						>
							<Icon name={scroll} size="52" />
							<p class="font-bold capitalize">{scroll}</p>
							<p class="text-text-secondary text-light max-h-0 overflow-clip text-base transition-all group-hover:max-h-[1lh]">
								Scroll to section
							</p>
							<Icon name="chevronDown" size="32" />
						</a>
					))
				}
			</div>
		</div>
	</div>
</section>
