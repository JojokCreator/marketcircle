---
import { Icon } from "astro-icon/components";
import type { Props as ButtonProps } from "./Button.astro";

interface Props {
	title: string;
	button?: ButtonProps | false;
	scroll: string[];
}
const { title, scroll } = Astro.props;
---

<section class={`mx-auto lg:max-w-7xl mt-20 md:mt-28 px-4 sm:px-6 md:px-8 lg:py-0 2xl:px-0`}>
	<div class={`flex flex-col justify-center text-center items-center`}>
		<div class={`px-4 2xl:px-0 h-full flex flex-col justify-between gap-4 md:gap-6`}>
			<h2 class="mx-auto mb-4 max-w-2xl md:mb-8 lg:max-w-6xl">{title}</h2>
			<div class="mx-auto max-w-2xl lg:max-w-4xl">
				<slot />
			</div>
			<div class="mx-auto hidden w-full max-w-4xl grow flex-row justify-between md:flex md:py-12">
				{
					scroll.map((scroll, index) => (
						<a
							href={"#" + scroll}
							class={`group flex h-52 w-full flex-col items-center justify-center gap-2 text-xl hover:cursor-pointer md:text-2xl/10 ${index === 0 ? "text-accent-blue" : index === 1 ? "text-accent-teal" : index === 2 ? "text-accent-red" : "text-accent-purple"}`}
						>
							<Icon name={scroll} size="52" />
							<p class="font-bold capitalize">{scroll}</p>
							<p class="text-text-secondary text-light max-h-0 overflow-clip text-base transition-all group-hover:max-h-[1lh]">
								Scroll to section
							</p>
							<Icon name="chevronDown" size="32" />
						</a>
					))
				}
			</div>
		</div>
	</div>
</section>
