---
import Button from "./Button.astro";

const cards = [
	{
		title: "Start your 14-day trial",
		text: "Download Daylite on your Mac, iPad, and iPhone.",
	},
	{
		title: "Start using Daylite daily",
		text: "Organize your business in one place.",
	},
	{
		title: "Level up!",
		text: "Have more time to do what you love.",
	},
];

interface Props {
	cardsTitle?: string;
	padding?: boolean;
	contained?: boolean;
}
const {
	cardsTitle = "Youâ€™ve built your business this far. Take it to the next level.",
	padding = false,
	contained = false,
} = Astro.props;
---

<div
	class={`${padding ? "my-8 sm:my-24" : ""} ${contained ? "" : "px-4 sm:px-6 md:px-8 2xl:px-0"} text-center `}
>
	<h2 class="mt-4 text-2xl/10 font-bold sm:mt-8 lg:text-[1.75rem]/16">{cardsTitle}</h2>
	<div
		class="mx-auto flex w-full max-w-6xl flex-col justify-evenly gap-4 py-6 sm:flex-row sm:gap-2 sm:py-12 md:gap-0"
	>
		{
			cards.map((card, index) => (
				<div class="w-full space-y-2 text-base sm:text-lg/8">
					<div class="border-orange text-orange mx-auto mb-2 grid aspect-square max-w-12 place-items-center rounded-full border-4 text-xl font-bold sm:text-2xl">
						{index + 1}
					</div>
					<p class="text-lg font-bold">{card.title}</p>
					<p class="text-base">{card.text}</p>
				</div>
			))
		}
	</div>
	<Button buttonText="Start Free Trial" link="/signup/" type="filled" class="mx-auto w-44 py-5" />
</div>
